<!--pages/wallet/wallet.wxml-->
<view class="Top">
  <view class="Top-view" bindtap="change" data-index="1">
    <text class="Top-view-text">我的余额</text>
    <text class="Top-view-text-1">\n￥0.00</text>
  </view>
  <view class="Top-view" bindtap="change" data-index="2">
    <text class="Top-view-text">我的积分</text>
    <text class="Top-view-text-2">\n￥36.21</text>
  </view>
  <view class="Top-Presentation" bindtap="gopresentation">余额提现</view>
</view>



 <view class="Foot" hidden="{{changeindex == 2 ? true : false}}">
  <view class="balance" wx:for="{{12}}">
    <image class="balance-image" src="/images/wallet.png"></image>
    <text class="balance-text">余额管理员后台修改[-182.00]<text class="balance-text-text">\n2019-07-15 15：12：15</text></text>
  </view>
 </view>

 <view class="Foot" hidden="{{changeindex == 1 ? true : false}}">
  <view class="balance" wx:for="{{12}}">
    <image class="balance-image" src="/images/wallet.png"></image>
    <text class="balance-text">积分管理员后台修改[-182.00]<text class="balance-text-text">\n2019-07-15 15：12：15</text></text>
  </view>
 </view>
