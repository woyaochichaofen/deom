.TopBox>view{
  width: 80%;
  height: 50rpx;
  display: inline-block;
  margin-left: 5%;
  border-radius: 60rpx;
  background: #f0f0f0;
}
.TopBox view icon{
  display: inline-block;
  float: left;
  margin: 8rpx 0 0 16rpx;
}
.TopBox view input{
  width: 520rpx;
  float: left;
  margin: 3rpx 0 0 16rpx;
  font-size: 28rpx;
}
.TopBox text{
  color: #f4a040;
  float: right;
  font-size: 28rpx;
  margin: 6rpx 5% 0 0;
}
