/* 猜你喜欢 */
.foot{
  width: 100%;
  overflow: hidden;
  padding: 20rpx 0 0 0;
  background: #eee;
}
.foot view{
  width: 347rpx;
  height: 480rpx;
  background: white;
  float: left;
  margin:0 0 20rpx 20rpx;
  line-height: 38rpx;
}
.foot view image{
  width: 90%;
  height: 54%;
  margin: 5% 0 3% 3%;
}
.foot view text{
  display: inline-block;
  width: 84%;
  margin-left:7%;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.foot view text:nth-child(2){
  margin-bottom:12rpx; 
}
.foot view text:nth-child(3){
  display: inline;
  color: #fd8325;
  font-size: 32rpx;
  position: relative;
}
.foot view text text{
  width: 40rpx;
  position: absolute;
  top: 8rpx;
  right: -68rpx;
  background:#fd8325;
  font-size: 20rpx;
  padding: 0 8rpx 0 8rpx;
  color: white;
  line-height: 30rpx;
}
.foot view text:nth-child(4){
  color: #888;
  font-size: 20rpx;
  text-decoration: line-through;
}