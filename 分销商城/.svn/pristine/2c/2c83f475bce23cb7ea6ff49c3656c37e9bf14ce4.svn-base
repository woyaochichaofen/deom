
.gwc_body{
  width:100%;
  background: #eee;
}
/* ----------- 优惠卷-------------- */
.yhj{
  background: #f4a040;
  padding:18rpx 28rpx;
  font-size: 34rpx;
  color:#fff;
  flex: left;
}
.yhj view{
  width:30rpx;
  height:30rpx;
  float: right;
}
.yhj image{
  width:100%;
