.logistino{
  width: 95%;
  height: auto;
  padding-top: 20px;
  padding-left: 5%;
}
.logistino .logistino-s,.logistino .logistino-n{
  font-size: 3.5vw;
  color: #666666;
  line-height: 5vw;
  margin-left: 20px;
}

.track-rcol{
  width: 100%;
  height: auto;
}
.track-list{
  margin: 20px;
  padding-left: 5px;
  position: relative;
}
.track-list .track-list-li{
  position: relative;
  padding: 9px 0 0 25px;
  line-height: 18px;
  border-left: 1px solid #d9d9d9;
  color: #999;
  }
.track-list .track-list-li.first{
  color: red;
  padding-top: 2vw;
  border-left-color: #d9d9d9;
}
.track-list .track-list-li .node-icon{
  position: absolute;
  left: -6px;
  top: 50%;
  width: 11px;
  height: 11px;
  background-position: -21px -72px;
  background-repeat: no-repeat;
  /* background: url(./image/icon/order-icons.png)  -21px -72px no-repeat; */
  }
.track-list .track-list-li.first .node-icon{
  background-position:0 -72px;
}
.track-list .track-list-li .time{
  margin-right: 20px;
  position: relative;
  top: 4px;
  display: inline-block;
  vertical-align: middle;
  font-size: 3vw;
}
.track-list .track-list-li .txt{
  position: relative;
  top: 4px;
  display: inline-block;
  vertical-align: middle;
  font-size: 3.5vw;
}
.track-list .track-list-li.first .time{
  margin-right: 20px; 
}

.oper_show{
  width: 100%;
  height: 50vw;
  position: fixed;
  top: 50%;
  transform: translateY(-50%);
}
.oper_show .oper_show_bg{
  width: 100%;
  background-position:center center;
  background-repeat: no-repeat;
  background-size: 20vw;
  /* background: url(./image/wuliu.png) no-repeat center center/ 20vw; */
  height: 20vw;
  margin-bottom: 4vw;
}
.oper_show text{
  display: block;
  width: 100%;
  text-align: center;
  color: #999999;
  line-height: 5vw;
  font-size: 3.5vw;
}