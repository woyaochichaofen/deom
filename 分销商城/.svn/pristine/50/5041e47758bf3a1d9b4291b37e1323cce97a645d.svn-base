// pages/address/home.js
const util = require('../../utils/util');
const api = require('../../utils/api');
const app = getApp();

Page({

  /**
   * 页面的初始数据
   */
  data: {
    list:[],
    site:'',
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    if (options.site){
      this.setData({
        site: options.site
      })
    }
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },
  addAddress:function(){
    wx.navigateTo({
      url: '/pages/address/add',
    })
  },
  addressAjax:function(){
    //获取地址
    let that = this;
    util.request(api.Getaddress, {}, 'post').then(function (res) {
      if (res.success) {
        that.setData({
          list:res.list
        })
      } else {
        util.showErrorToast(res.info);
      }
    })
  },
  editAddress:function(e){
    let that  = this;
    let id = e.currentTarget.dataset.id;
    wx.navigateTo({
      url: '/pages/address/edit?id=' + id,
    })
  },
  editAjax:function(e){
    let that = this;
    let id = e.currentTarget.dataset.id;
    let site = that.data.site;
    if (site == 1){
      //返回选择地址
      let index = e.currentTarget.dataset.index;
      let list = that.data.list;
      let pages = getCurrentPages();
      let prevPage = pages[pages.length - 2];

      let siteRess = {
        name: list[index].username,
        mobile: list[index].mobile,
        city: list[index].city,
        address: list[index].address,
      }
      prevPage.setData({
        siteRess: siteRess
      })
      // 放回上一页
      wx.navigateBack({
        delta: 1
      })
    }else{
      util.request(api.Editaddress, {
        id: id,
        is_state: 1,
      }, 'post').then(function (res) {
        if (res.success) {
          // 修改默认地址
          that.addressAjax();
        } else {
          util.showErrorToast(res.info);
        }
      })
    }
    
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    this.addressAjax();
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})