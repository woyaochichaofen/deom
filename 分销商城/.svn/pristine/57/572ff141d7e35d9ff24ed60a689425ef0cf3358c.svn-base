/* pages/vip/myfans.wxss */
page{
  background: #fff;
  padding-top: 20px;
}
#you{
  width: 100%;
  height: auto;
  overflow: hidden;
  position: fixed;
  top: 0;
}
#you .people{
  font-style: normal;
  color: #666;
  font-size: 3.4vw;
  display: block;
  width: 100%;
  line-height: 20px;
  text-align: center;
}
#you .people .num{
  display: inline-block;
  color: #ea3e4a;
  margin-right: 5px;
}

Foot{
  width: 100%;
  height: auto;
  overflow: hidden;
  /* margin-top: 30rpx; */
}
.balance{
  width: 100%;
  height: auto;
  border-top:1px solid #f5f5f5;
  /* line-height: 42rpx; */
  float: left;
  position: relative
}

.balance:nth-child(1){
   border-top:0;
}
.balance-image{
  background-position: center center;
  background-size: 80%;
  background-repeat: no-repeat;
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  border-radius: 50%;
  top: 50%;
  transform: translateY(-50%);
  left: 20rpx;
}

.balance-value{
  width: calc(100% - 120rpx);
  float: right;
  height: auto;
  overflow: hidden;
  padding: 10px 0;
}

.balance-text{
  font-size: 26rpx;
  line-height: 18px;
}
.name{
  display: inline-block;
  color: #999999;
  font-size: 18rpx;
  margin-left: 20px;
  line-height: 18px;
}
.balance-time{
  font-size: 22rpx;
  color: #969696;
  margin-top: 3px;
}