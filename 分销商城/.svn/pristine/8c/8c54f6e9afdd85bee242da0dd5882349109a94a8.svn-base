/* pages/wallet/presentation.wxss */
page{
  background: white;
}
.Form{
  width: 100%;
  height: 280rpx;
  margin: 80rpx 0;
  margin-top: 10rpx;
}
.Form-view{
  width: 90%;
  height: 104rpx;
  line-height: 104rpx;
  margin-left:5%;
  border-bottom: 1rpx solid #ddd;
  font-size: 30rpx;
  color: #5c5c5c;
}
.Form-view-text{
  float: left;
  margin-left: 10rpx;
}
.Form-view-input{
  float: left;
  width: 40%;
  height: 70rpx;
  margin: 15rpx 0 0 20px; 
  font-size: 28rpx;
}
.balance{
  color: #bbb;
}
/* 按钮 */
.Buttonw{
  width: 90%;
  height: 80rpx;
  color: white;
  background: #e7474f;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  margin-left: 5%;
  border-radius: 100rpx;
  margin-top: 30rpx;
  border: none;
}

.Form-view-image{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-top: 25rpx;
  margin-left: 10rpx;
}

.code{
  background: #e7474f;
  color: white;
  width: 150rpx;
  height: 60rpx;
  padding: 0 20rpx;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-right: 10rpx;
  font-size: 22rpx;
  border-radius: 50rpx;
  float: right;
}
.codeHover{
  background: #888;
  color: white;
  width: 150rpx;
  height: 60rpx;
  padding: 0 20rpx;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-right: 10rpx;
  font-size: 22rpx;
  border-radius: 50rpx;
  float: right;
}