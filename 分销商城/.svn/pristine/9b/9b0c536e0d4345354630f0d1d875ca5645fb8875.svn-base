@import '../search/search.wxss';
[class*="icon-"] {
    font-family: "iconfont" !important;
}
page {
  background-color: #f0f0f0;
  padding-top: 90px;
} 
.TopBox{
 width: 100%;
 height: 66rpx;
 background: white;
 padding-top:10rpx; 
}
.TopBox>view{
  width: 90%;
  height: 50rpx;
  display: inline-block;
  margin-left: 5%;
  border-radius: 60rpx;
  background: #f0f0f0;
}
.TopBox view icon{
  display: inline-block;
  float: left;
  margin: 8rpx 0 0 16rpx;
}
.TopBox view input{
  width: 520rpx;
  float: left;
  margin: 3rpx 0 0 16rpx;
  font-size: 28rpx;
}
.TopBox text{
  color: #f4a040;
  float: right;
  font-size: 28rpx;
  margin: 6rpx 5% 0 0;
}
/* 筛选 */
.ShaiXuan{
  width: 100%;
  height: 70rpx;
  background: white;
  color: #555;
  position: fixed;
  top: 50px;
  z-index: 999;
}
.ShaiXuan>view{
  width: 186rpx;
  height: 40rpx;
  text-align: center;
  float: left;
  margin-top: 15rpx;
  border-left: 2rpx solid #ccc;
  line-height: 40rpx;
  font-size: 24rpx;
}
.Jiaimage{
  position: relative;
  top: -40rpx;
  right: -134rpx;
}
.Jiaimage image{
  display: block;
  width: 16rpx;
  height: 8rpx;
  margin-top: 7rpx;
}
.ShaiXuan view:first-child{
  border: none;
}
.btn{
  color: #f4a040;
}