/* pages/gwcchilds/xiangqing/xiangqing.wxss */
.body{
  background: #fff;
  font-size: 32rpx;
}
.headtop{
  border-top:2rpx solid rgb(241, 240, 240);
  height:48rpx;
}
.head{
  height:186rpx;
  padding-left:46rpx;
  color:#fcfcda;
  position: relative;
}
.head>image{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  z-index: 0;
}
.head>view{
  line-height: 42rpx;
  position: relative;
  z-index: 90;
}
.head>view:nth-child(2){
  font-size: 34rpx;
  padding-top:46rpx;
}
.head>view:nth-child(3){
  padding-top:8rpx;
}
.header{
  border-top:10rpx solid #fcf4f3;
  height:144rpx;
}
.header>image{
  width:60rpx;
  height:64rpx;
  float: left;
  margin-left:40rpx;
  margin-top:40rpx;
}
.texttop{
  margin-top:38rpx;
  padding-left:120rpx;
}
.texttop>text{
  font-size: 32rpx;
  padding-right:20rpx;
  color:#111;
}
.foottext{
  padding-left:120rpx;
  color:#999;
  padding-top:14rpx;
}

.list{
  height:342rpx;
  border-top:20rpx solid #f0f0f0;
}
.list-head{
  font-size: 34rpx;
  color:#999;
  padding:18rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.list-content>image{
  background: pink;
  width:110rpx;
  height:110rpx;
  margin-top:24rpx;
  margin-left:30rpx;
  float: left;
}
.list-right{
  line-height: 40rpx;
  font-size: 30rpx;
  padding-right:166rpx;
  padding-left:156rpx;
  padding-top:20rpx;
  position: relative;
  height:158rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.list-right>view{
  position: absolute;
  top:0;
  right:0;
  height:100%;
  text-align: right;
  font-size: 30rpx;
  padding-top:20rpx;
  color:#f7832c;
  padding-right: 20rpx;
}
.list-right>view>view{
  margin-top:40rpx;
  color:#333;
}
.list-foottext{
  text-align: right;
  padding-top:10rpx;
  padding:0 20rpx;
  font-size: 30rpx;
  line-height: 44rpx;
}
.list-foottext text{
  font-size: 28rpx;
}
.list-foottext>view:nth-child(1){
  color:#999;
  padding-top:6rpx;
}
.zfxx-head{
  border-top:20rpx solid #f0f0f0;
  border-bottom:2rpx solid #f0f0f0;
  text-align: right;
  padding:16rpx 20rpx;
  color:red;
}
.zfxx-head>view{
  float: left;
  font-size: 34rpx;
  color:#000;
}
.zfxx-content{
  color:#999;
  padding:10rpx 30rpx;
  line-height: 40rpx;
}
.beizu{
  background: #f0f0f0;
  font-size: 34rpx;
  color: #000;
  padding:20rpx;
}
.liouyan{
  margin:20rpx;
}
.liouyan>textarea{
  padding:16rpx;
  border:2rpx solid #d6d4d4;
  height:60rpx;
  width:100%;
}
.footerbg{
  background: #f0f0f0;
  height:90rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  width:100%;
  background: #ffffff;
}
.footer>view{
  float: left;
  text-align: center;
  padding:30rpx 0;
  color:#fff;
}
.footer>view:nth-child(1){
  width:52%;
  color:#000;
  background: #fff;
  font-weight: bold;
}
.footer>view:nth-child(1)>text{
  color:#fc7728;
}

.config_pay{
    position: fixed;
    z-index: 999;
    bottom: 0px;
    left: 0px;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    background: #fff;
    width: 100%;
    height: 48px;
    padding-left: 4%;
}
.config_pay .b{
    float: left;
    line-height: 50px;
    font-size: 17px;
}
.config_pay .b view{
    display: inline-block;
    color:#fc7728;
}
.config_pay .config_pay_btn{
    float: right;
    text-align: center;
}
.config_pay .config_pay_btn .huise{
    display: block;
    float: left;
    width: 88px;
    height: 100%;
    background: none;
    border:none;
    color: #fff;
    font-size: 15px;
    line-height: 50px;
    background: #b6b6b6;
}
.config_pay .config_pay_btn .orange{
    display: block;
    float: left;
    width: 88px;
    height: 100%;
    /* background: #38aee3; */
    background: #fa7928;
    border:none;
    color: #fff;
    font-size: 15px;
    line-height: 50px;
}


.site{
  width: 100%;
  height: auto;
  overflow: hidden;
  position: relative;
  background-size:8px;
  background-repeat:no-repeat;
  background-position:calc(100% - 13px) center;  
  padding: 15px 0;
  background-color: #ffffff;
}
.dizhib{
  width: 100%;
  height: 5px;
  background-size:100%;
  background-repeat:no-repeat;
  background-position:center center;  
}
.site-bg{
  width: 30px;
  height: 30px;
  position: absolute;
  top: 47%;
  left: 13px;
  transform: translateY(-50%);
  background-size:70%;
  background-repeat:no-repeat;
  background-position:center center;  
}
.site-value{
  float: left;
  width: 75%;
  margin-left: 56px;
  height: auto;
  overflow: hidden;
}
.site-no{
  width: 100%;
  color: #fe3535;
  font-size: 4.5vw;
  line-height: 12vw;
  word-break: break-all;
}

.site-name{
  font-size: 4vw;
  font-weight: 400;
  color: #333333;
}
.site-mobile{
  display: inline-block;
  margin-left: 4.2vw;
  color: #333333;
}
.site-address{
  width: 100%;
  /* margin-bottom: 5px; */
  color: #666666;
  font-size: 3.5vw;
  line-height: 20px;
  margin-top: 2px;
  word-break: break-all;
}
