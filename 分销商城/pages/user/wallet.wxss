.balance-image{
  background-position: center center;
  background-size: 80%;
  background-repeat: no-repeat;
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 20rpx;
}
.balance-value{
  width: calc(100% - 120rpx);
  float: right;
  height: auto;
  overflow: hidden;
  padding: 10px 0;
}

.balance-text{
  font-size: 26rpx;
  line-height: 18px;
}
.balance-time{
  font-size: 22rpx;
  color: #969696;
  margin-top: 3px;
}
